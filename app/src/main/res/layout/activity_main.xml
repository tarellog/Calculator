<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_n"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_0"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/button_n"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_equally"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_t"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/button_equally"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_1"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_0"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_2"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintBottom_toTopOf="@id/button_0"
        android:layout_marginStart="2.5dp"

        />

    <Button
        android:id="@+id/button_3"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintBottom_toTopOf="@id/button_0"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintBottom_toTopOf="@id/button_0"
        android:layout_marginStart="2.5dp"

        />

    <Button
        android:id="@+id/button_4"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_5"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_4"
        app:layout_constraintBottom_toTopOf="@id/button_2"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_6"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_5"
        app:layout_constraintBottom_toTopOf="@id/button_3"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_6"
        app:layout_constraintBottom_toTopOf="@id/button_plus"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_7"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_4"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_8"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_7"
        app:layout_constraintBottom_toTopOf="@id/button_5"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_9"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_8"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        android:layout_marginStart="2.5dp"
        />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_9"
        app:layout_constraintBottom_toTopOf="@id/button_minus"
        android:layout_marginStart="2.5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>